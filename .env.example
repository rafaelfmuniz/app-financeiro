# Ambiente
NODE_ENV=development

# Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=finance_user
DB_PASS=senha_segura_aqui
DB_NAME=controle_financeiro

# Servidor
PORT=3000
JWT_SECRET=chave_jwt_secreta_minimo_32_caracteres

# Usuário Master (será criado automaticamente na primeira execução)
MASTER_EMAIL=admin@example.com
MASTER_PASSWORD=senha_admin_segura
MASTER_NAME=Administrador
MASTER_USERNAME=admin
DEFAULT_TENANT_NAME=Principal

# Configuração SMTP (Opcional - pode ser configurado via interface web)
# Exemplo Gmail:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=seu_email@gmail.com
# SMTP_PASS=sua_app_password
# SMTP_FROM=Controle Financeiro <noreply@exemplo.com>
# SMTP_REPLY_TO=suporte@exemplo.com

# URL da aplicação (usada em emails)
APP_BASE_URL=http://localhost:3000
